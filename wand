accio() {
  if [ -n "$1" ]; then
    echo -e "Looking for '\033[0m$1\033[0m' under '\033[0m$(pwd)\033[0m'"
    grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn} -HIirn "$1" .
  else
    echo "You must supply a term to search"
  fi
}
alohomora() {
  if [ -n $1 ]
  then
    sudo chown -R $USER $1
  else
    sudo chown -R $USER .
  fi
}
geminio() {
  filename=$(basename $1)
  extension="${filename##*.}"
  filename="${filename%.*}"
  posfix="_copy"
  tail=$posfix
  directory=$(dirname $1)
  new_filename="$filename$tail.$extension"
  while [ -f "$directory/$new_filename" ]; do
    tail="$tail$posfix"
    new_filename="$filename$tail.$extension"
  done
  cp $1 "$directory/$new_filename"
}
lumos() {
  if [ -n $1 ]; then
    if [ -d $1 ]; then
      ls -al $1
    elif [ -f $1 ]; then
      cat $1
    fi
  else
    ls -al
  fi
}
